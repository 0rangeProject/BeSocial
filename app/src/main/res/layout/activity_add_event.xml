<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agathe.tsgtest.events.AddEventActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framelayout_addevent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageview_addevent"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@color/cardview_shadow_start_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar_addevent"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryTransparent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="#FFFFFF" />
            </android.support.v7.widget.Toolbar>


            <Button
                android:text="@string/add_photos"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_photos_button"
                android:layout_below="@id/my_toolbar_addevent"
                android:background="#00000000" />

        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_below="@id/framelayout_addevent" >

        <TextView
            android:text="@string/write_event_title"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/write_event_title"
            android:gravity="center_vertical" />

        <Button
            android:text="@string/add_venue"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/add_venue_addevent"
            android:background="@drawable/buttonborder"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textAllCaps="false" />
        <Button
            android:text="@string/add_description"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/add_description_addevent"
            android:background="@drawable/buttonborder"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textAllCaps="false" />
        <Button
            android:text="@string/add_schedule"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/add_schedule_addevent"
            android:background="@drawable/buttonborder"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textAllCaps="false" />
        <Button
            android:text="@string/add_categories"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/add_categories_addevent"
            android:background="@drawable/buttonborder"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textAllCaps="false" />
    </LinearLayout>


</RelativeLayout>
