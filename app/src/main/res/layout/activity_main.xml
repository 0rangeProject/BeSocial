<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agathe.tsgtest.MainActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/nav_drawer_top_background">

        <LinearLayout
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:gravity="left">
            <ImageView
                android:id="@+id/userImage"
                android:scaleType="fitCenter"
                android:src="@mipmap/user"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/nav_drawer_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="4dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/main_nav_menu_default_user_text"
                android:background="@color/nav_drawer_no_user_background"
                android:id="@+id/userName" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_text_sign_out"
            android:id="@+id/button_signout"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_below="@id/user_info"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_but"
            android:layout_below="@+id/button_signout"
            android:layout_toLeftOf="@+id/logout_but"
            android:layout_toStartOf="@+id/logout_but" />

        <TextView
            android:text="Not Logged In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:textAlignment="center"
            android:textSize="28sp"
            android:gravity="center_vertical"
            android:layout_below="@+id/login_but"
            android:layout_alignRight="@+id/logout_but"
            android:layout_alignEnd="@+id/logout_but" />

        <Button
            android:text="Carpooling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/login"
            android:layout_alignEnd="@+id/login"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="71dp"
            android:id="@+id/carpooling_but" />

        <Button
            android:text="LOGOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout_but"
            android:layout_alignBaseline="@+id/login_but"
            android:layout_alignBottom="@+id/login_but"
            android:layout_toRightOf="@+id/user_info"
            android:layout_toEndOf="@+id/user_info"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sign out from SMP"
            android:id="@+id/button_signout_smp"
            android:layout_below="@+id/login"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_image"
            android:src="@drawable/town_image"
            android:layout_below="@+id/button_signout_smp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <FrameLayout
            android:id="@+id/main_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
