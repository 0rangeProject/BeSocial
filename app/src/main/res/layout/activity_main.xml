<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="@string/home_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_main_title"
        android:textAlignment="gravity"
        android:textSize="28sp"
        android:textColor="#FF6633"
        android:layout_below="@+id/main_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/home_map_enjoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_title"
        android:textAlignment="gravity"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/home_map_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_but"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/logout_but"
        android:layout_toStartOf="@+id/logout_but" />

    <TextView
        android:text="@string/home_map_not_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:textAlignment="center"
        android:textSize="28sp"
        android:gravity="center_vertical"
        android:layout_below="@+id/login_but"
        android:layout_alignRight="@+id/logout_but"
        android:layout_alignEnd="@+id/logout_but" />

    <Button
        android:text="@string/home_map_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_but"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="76dp"
        android:layout_marginEnd="76dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_image"
        android:src="@drawable/town_image"
        android:layout_below="@+id/end_main_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/describe_town"/>

    <Button
        android:text="@string/home_map_hidden_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sport_btn"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_marginTop="32dp"
        android:layout_alignTop="@+id/main_image"
        android:layout_toRightOf="@+id/login_but"
        android:layout_toEndOf="@+id/login_but"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <Button
        android:text="@string/home_map_hidden_lservices"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/lServices_btn"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/sport_btn"
        android:layout_toRightOf="@+id/sport_btn"
        android:layout_toEndOf="@+id/sport_btn" />


</RelativeLayout>
