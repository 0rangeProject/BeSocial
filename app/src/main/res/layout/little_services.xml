<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:text="@string/little_services"
        android:textColor="@color/colorOrange"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/little_services_tittle"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:text="@string/ls_description"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/little_services_description"
        android:layout_below="@+id/little_services_tittle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@color/colorGray"
        android:id="@+id/little_service_text"
        android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/little_services_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="17dp"
        android:id="@+id/ls_contact_list"
        android:layout_below="@+id/little_service_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>